source 'https://rubygems.org'

gem 'activerecord', require: 'active_record' #activerecord is a dependency of sinatra-activerecord
gem 'bcrypt' #secure way to store passwords
gem 'pry' #debugging tool
gem 'puma' #web server
gem 'rake' #task runner
gem 'require_all' #require all files in a directory
gem 'sinatra' #web framework
gem 'sinatra-activerecord', require: 'sinatra/activerecord' #activerecord for sinatra
gem 'sqlite3' #database
gem 'tux'  #interactive console for ActiveRecord models